{
  "name": "github-pages",
  "description": "GitHub Action to deploy to GitHub Pages",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "pre-checkin": "yarn run format && yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/crazy-max/ghaction-github-pages.git"
  },
  "keywords": [
    "actions",
    "github",
    "pages",
    "deploy"
  ],
  "author": "CrazyMax",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/exec": "^1.0.4",
    "addressparser": "^1.0.1",
    "fs-extra": "^9.0.1"
  },
  "devDependencies": {
    "@actions/io": "^1.0.2",
    "@types/fs-extra": "^9.0.1",
    "@types/node": "^14.11.2",
    "@vercel/ncc": "^0.24.1",
    "prettier": "^2.1.2",
    "typescript": "^4.0.3",
    "typescript-formatter": "^7.2.2"
  }
}
